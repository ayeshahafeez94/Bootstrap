<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="training.acn.com.bootstrap.ConstraintLayoutActivity">

    <View xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/view"

        style="@style/AppTheme.Block"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/AppTheme.Block"

        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <View xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/AppTheme.Block"

        android:layout_marginBottom="2dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <View xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/AppTheme.Block"

        android:layout_marginBottom="2dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/AppTheme.Block"

        android:layout_marginBottom="2dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/AppTheme.Block"

        android:layout_marginTop="1dp"
        android:layout_marginRight="1dp"
        app:layout_constraintRight_toLeftOf="@+id/center_block"
        app:layout_constraintTop_toBottomOf="@+id/center_block" />

    <View xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/center_block"

        style="@style/AppTheme.Block"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="281dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="167dp" />

</android.support.constraint.ConstraintLayout>
